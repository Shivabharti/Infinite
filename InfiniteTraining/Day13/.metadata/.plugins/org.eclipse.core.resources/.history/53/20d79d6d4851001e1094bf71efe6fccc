<head>
	<script type="">
		function show(){
			if(frm.chkStatus.checked==true){
				document.getElementById("result").innerHTML="Present";
			}else{
				document.getElementById("result").innerHTML="Absent";
				}
		}

	</script>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
	<form name="frmData">
		<center>
			Status :
			<input type="checkbox" name="chkStatus" onchange="show()" /><br/><br/>
		</center>
	</form>

</body>
